<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent" xmlns:app="http://schemas.android.com/apk/res-auto"
        tools:context=".favor.FavorFragment">

  <android.support.constraint.ConstraintLayout
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          app:layout_constraintTop_toTopOf="parent"
          android:padding="8dp"
          android:background="#009999"
  >
    <TextView
            android:id="@+id/favor_label_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toLeftOf="@+id/favor_label_price"
            app:layout_constraintHorizontal_chainStyle="spread_inside"
            android:layout_marginLeft="24dp"
            android:textSize="20dp"
            android:textColor="#ffffff"
            android:text="코인"
    />
    <TextView
            android:id="@+id/favor_label_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toRightOf="@+id/favor_label_name"
            app:layout_constraintRight_toLeftOf="@+id/favor_label_change"
            android:textSize="20dp"
            android:textColor="#ffffff"
            android:text="가격"
    />
    <TextView
            android:id="@+id/favor_label_change"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toRightOf="@id/favor_label_price"
            app:layout_constraintRight_toRightOf="parent"
            android:layout_marginRight="24dp"
            android:textSize="20dp"
            android:textColor="#ffffff"
            android:text="변동"
    />

  </android.support.constraint.ConstraintLayout>



</android.support.constraint.ConstraintLayout>